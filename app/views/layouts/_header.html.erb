<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "Tier list app", root_path, id: "logo"%>
        <nav>
            <div class="navbar-header">
                <button id="hamburger" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <ul id="navbar-menu"
                class="nav navbar-nav navbar-right">
                <li><%= link_to "Home", root_path%></li>
                <li><%= link_to "All Tier lists", tierlists_path %></li>
                <% if logged_in? %>
                    <li><%= link_to "Users", users_path %></li>
                    <li class="dropdown" >
                        <a href="#" id ="account" class="dropdown-toggle" >
                            アカウント <b class="caret" ></b>
                        </a>
                        <ul id="dropdown-menu" class="dropdown-menu" >
                            <li><%= link_to "プロフィール", current_user %></li>
                            <li><%= link_to "プロフィール編集", edit_user_path(current_user) %></li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "ログアウト", logout_path,
                                                        data: { "turbo-method": :delete } %>
                            </li>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Log in", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>