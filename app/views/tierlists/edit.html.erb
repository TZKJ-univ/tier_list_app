<% provide(:title, "Edit Tierlist") %>
<h1>Edit Tierlist</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @tierlist, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label "Tierlistタイトルを編集" %>
        <%= f.text_field :list, class: 'form-control' %>
      </div>

      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :editable_by_anyone, class: 'custom-control-input' %>
          <%= f.label :editable_by_anyone, "誰でも編集可能にする", class: 'custom-control-label' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>