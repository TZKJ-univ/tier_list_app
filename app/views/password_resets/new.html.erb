<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row" >
    <div class="col-md-6 col-md-offset-3" >
        <%= form_with(url: password_resets_path, scope: :password_reset) do |f| %>
         <%#「scope: :password_reset」により入力されたデータがparams[:password_reset]として送信される%>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-contol' %>

            <%= f.submit "Submit", class: "btn btn-promary" %>
        <% end %>
    </div>
</div>